@using Microsoft.AspNetCore.Mvc.Rendering
@model PageUp.Compliance.Vendor.Core.Config

@{
    ViewData["Title"] = "Config";
}

<div class="row">
    <div class="col-md-12">
        <h2>Configuration</h2>
        @using (Html.BeginForm("SaveConfig", "Vendor", new {}, FormMethod.Post, true, new {@class = "form-horizontal"}))
        {
            <div class="form-group">
                <label for="client-id" class="col-sm-2 control-label">Client ID</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => Model.ClientId, null, new {@class = "form-control", id = "client-id", placeholder = ""})
                </div>
            </div>
            <div class="form-group">
                <label for="client-secret" class="col-sm-2 control-label">Client Secret</label>
                <div class="col-sm-10">
                    @Html.PasswordFor(model => Model.ClientSecret, new {@class = "form-control", id = "client-secret", placeholder = "", value = Model.ClientSecret})
                </div>
            </div>
            <div class="form-group">
                <label for="data-center" class="col-sm-2 control-label">Data Center</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => Model.DataCenter, null, new {@class = "form-control", id = "data-center", placeholder = ""})
                </div>
            </div>
            <div class="form-group">
                <label for="instance-id" class="col-sm-2 control-label">Instance Id</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => Model.InstanceId, null, new {@class = "form-control", id = "data-center", placeholder = ""})
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Save to Session</button>
                </div>
            </div>
        }
    </div>
</div>